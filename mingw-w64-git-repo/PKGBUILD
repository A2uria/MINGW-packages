_realname=git-repo
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=0.3.17
pkgrel=1
pkgdesc="The multiple Git repository tool"
arch=("any")
url="https://github.com/esrlabs/git-repo"
license=("Apache-2.0")
groups=("${MINGW_PACKAGE_PREFIX}")
depends=("${MINGW_PACKAGE_PREFIX}-python3")
source=("https://github.com/esrlabs/${_realname}/archive/v${pkgver}.tar.gz"
        "0001-Ensure-Python-3-is-used.patch")
md5sums=("87b9bf38003ebed8b0692bf36b8f4c3e"
         "78d9d83c83c4cdc2c15852d2bf0a4ad6")

prepare() {
  cd "${srcdir}/${_realname}-${pkgver}"
  patch -p1 -i "${srcdir}/0001-Ensure-Python-3-is-used.patch"
}

package() {
  cd "${srcdir}/${_realname}-${pkgver}"
  mkdir -p "${pkgdir}${MINGW_PREFIX}/bin"
  cp repo "${pkgdir}${MINGW_PREFIX}/bin"
}
